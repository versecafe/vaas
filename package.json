{
  "name": "vaas-monorepo",
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "start": "turbo start",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "node-purge": "turbo node-purge && rm -rf node_modules && rm -f pnpm-lock.yaml",
    "check-types": "turbo check-types",
    "format": "prettier --write $(git diff --name-only --diff-filter d | grep -E '\\.(ts|tsx|md)$')",
    "format:all": "prettier --write \"**/*.{ts,tsx,md,mdx,js,jsx}\""
  },
  "devDependencies": {
    "@types/node": "^20.13.0",
    "@types/react": "^18.3.3",
    "eslint": "^8",
    "prettier": "^3.3.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.1",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5"
  }
}
